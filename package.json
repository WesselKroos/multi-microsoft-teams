{
  "name": "multi-microsoft-teams",
  "version": "1.0.0",
  "description": "Multiple Microsoft Teams tabs for your orgnizations (tenants) and accounts including notifications",
  "author": "Wessel Kroos",
  "license": "ISC",
  "main": "main.js",
  "dependencies": {
    "custom-electron-titlebar": "^3.2.2-hotfix62",
    "electron-context-menu": "^0.16.0",
    "electron-settings": "^3.2.0",
    "electron-windows-badge": "^1.0.5",
    "open": "^7.0.3"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "build": {
    "appId": "multi.microsoft.teams",
    "productName": "Multi Microsoft Teams",
    "copyright": "Copyright Â© 2020 Wessel Kroos",
    "buildVersion": "1.0.0",
    "win": {
      "icon": "./build/icon.ico",
      "publisherName": "Wessel Kroos",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "perMachine": false
    }
  }
}
